generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id
  text      String
  completed Boolean
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("tasks")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  passoword String
  birthDate DateTime
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("users")
}
