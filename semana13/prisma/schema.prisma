generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        String    @id
  text      String
  completed Boolean
  createdAt DateTime
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  taskTag   TaskTag[]

  @@map("tasks")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  passoword String
  birthDate DateTime
  createdAt DateTime
  updatedAt DateTime @updatedAt
  Task      Task[]

  @@map("users")
}

model Tag {
  id      String    @id
  name    String
  taskTag TaskTag[]

  @@map("tags")
}

model TaskTag {
  taskId String
  tagId  String
  task   Task   @relation(fields: [taskId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])

  @@id([taskId, tagId])
  @@map("task_tag")
}
